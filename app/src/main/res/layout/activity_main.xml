<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="18dp"
        android:background="#37009688"
        android:orientation="vertical"
        android:padding="18dp"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="18dp">

        <TextView
            android:id="@+id/userMsgTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="24dp"
            android:text="@string/default_msg"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#009688"
            android:textSize="32sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/userInputET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="@string/write_msg_hint"
            android:inputType="text" />

        <Button
            android:id="@+id/showBtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="#E91E63"
            android:fontFamily="sans-serif-black"
            android:gravity="start|center"
            android:onClick="showTextMessage"
            android:text="@string/show_text"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cleanBtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="#E91E63"
            android:fontFamily="sans-serif-black"
            android:gravity="start|center"
            android:onClick="cleanTextField"
            android:text="@string/clear"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
        <!-- TODO 04. Set a new width value (120dp) for the button with the id "showBtn" -->
        <!-- TODO 05. Add a new property to the "showBtn" to align the text within to the left side of the button -->
        <!-- TODO 08. Add a new button with the id "cleanBtn" to the layout with the same properties of the show button (showBtn) -->
        <!-- TODO 09. Link the "cleanBtn" to the "cleanTextField" method so whenever the user taps the button the text field gets cleaned -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>